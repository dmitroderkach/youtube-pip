{
  "name": "youtube-pip",
  "version": "2.1.0",
  "description": "Smart Picture-in-Picture mode with all YouTube controls and functions",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/dmitroderkach/youtube-pip.git"
  },
  "bugs": {
    "url": "https://github.com/dmitroderkach/youtube-pip/issues"
  },
  "homepage": "https://github.com/dmitroderkach/youtube-pip#readme",
  "scripts": {
    "test": "vitest run --coverage",
    "build": "npm run type-check && vite build",
    "build:debug": "npm run type-check && BUILD_DEBUG=1 vite build",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "release:tag": "node scripts/release-tag.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.5",
    "jsdom": "^28.0.0",
    "prettier": "^3.4.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.18.0",
    "vite": "^5.0.8",
    "vitest": "^4.0.18",
    "vitest-mock-extended": "^3.1.0"
  }
}
